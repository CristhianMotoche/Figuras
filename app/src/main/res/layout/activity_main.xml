
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Main"
    android:background="@drawable/fondo_menu">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:src="@drawable/logo"
            android:layout_below="@+id/textTitle"
            android:layout_marginTop="47dp"
            android:layout_marginBottom="30dp"
            android:layout_alignRight="@+id/textTitle"
            android:layout_alignEnd="@+id/textTitle"
            android:layout_alignLeft="@+id/textTitle"
            android:layout_alignStart="@+id/textTitle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnIniciar"
            android:background="@drawable/boton_inicio"
            android:textSize="40dp"
            android:layout_below="@+id/imageView"
            android:layout_alignLeft="@+id/btnJuego"
            android:layout_alignStart="@+id/btnJuego"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnJuego"
            android:background="@drawable/boton_juego"
            android:textSize="40dp"
            android:layout_below="@+id/btnIniciar"
            android:layout_alignLeft="@+id/btnIniciar"
            android:layout_alignStart="@+id/btnIniciar"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAbout"
            android:background="@drawable/boton_acercade"
            android:textSize="40dp"
            android:layout_below="@+id/btnJuego"
            android:layout_alignLeft="@+id/btnJuego"
            android:layout_alignStart="@+id/btnJuego"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSalir"
            android:background="@drawable/boton_salir"
            android:textSize="40dp"
            android:layout_below="@+id/btnIniciar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
